cabal-version:      3.0

name:               multiply
version:            0.2.0
synopsis:	    A number of different algorithms for integer multiplication
description:        Please see the README on GitLab at <https://github.com/frankhjung/haskell-multiply#readme>
homepage:           https://github.com/frankhjung/haskell-multiply#readme
bug-reports:        https://github.com/frankhjung/haskell-multiply/issues
author:             Frank H Jung
maintainer:         frankhjung@linux.com
copyright:          Copyright Â© 2021-2023 Frank H Jung
license:            BSD-3-Clause
license-file:       LICENSE
category:           education
build-type:         Simple
extra-source-files: README.md

source-repository   head
  type:             git
  location:         https://github.com/frankhjung/haskell-multiply

executable          multiply
  default-language: Haskell2010
  main-is:          Main.hs
  hs-source-dirs:   app
                  , src
  ghc-options:      -Wall -threaded -rtsopts -with-rtsopts=-N
  other-modules:    Multiply
                  , Paths_multiply
  build-depends:    base >= 4.13 && < 5.0
                  , multiply
  autogen-modules:  Paths_multiply

library
  default-language: Haskell2010
  hs-source-dirs:   src
  exposed-modules:  Multiply
  ghc-options:      -Wall
  build-depends:    base

test-suite          test
  default-language: Haskell2010
  hs-source-dirs:   test
                  , src
  main-is:          TestSpec.hs
  type:             exitcode-stdio-1.0
  ghc-options:      -Wall -threaded -rtsopts -with-rtsopts=-N
  other-modules:    Multiply
  build-depends:    base
                  , hspec
                  , QuickCheck
                  , multiply

benchmark           benchmark
  default-language: Haskell2010
  hs-source-dirs:   bench
                  , src
  main-is:          Bench.hs
  type:             exitcode-stdio-1.0
  other-modules:    Multiply
  build-depends:    base
                  , criterion
